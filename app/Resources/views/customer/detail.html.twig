{% extends 'base.html.twig' %}

{% block body %}

    <h1>Customer Order</h1>

    <p>Order for <b>{{ customer }}</b> and vendor <b>{{ vendor }}</b></p>

    <p><a class="btn btn-default"  href="{{ path('customer_export', {customer: customer, vendor: vendor}) }}"><span class="glyphicon glyphicon-save" aria-hidden="true"></span>&nbsp;Download as CSV</a></p>

    <table class="table">
        <tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Quantity</th>
        </tr>
        {% for item in items %}
            <tr>
                <td>{{ item.sku }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.quantity }}</td>
            </tr>
        {% endfor %}
    </table>

    <p><a href="{{ path('customer_view', {customer: customer}) }}">Back</a></p>

{% endblock %}
