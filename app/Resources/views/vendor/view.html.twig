{% extends 'order.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#itemTable').DataTable();
        });
    </script>
{% endblock %}

{% block body %}

    <h1>Vendor Order</h1>

    <p>Order for <b>{{ vendor }}</b></p>

    <p><a class="btn btn-default" href="{{ path('vendor_export', {vendor: vendor}) }}"><span class="glyphicon glyphicon-save" aria-hidden="true"></span>&nbsp;Download as CSV</a></p>

    <table id="itemTable" class="table">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.sku }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.quantity }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p><a href="{{ path('vendor_index') }}">Back</a></p>

{% endblock %}
